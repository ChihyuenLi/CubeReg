/* pages/community/community.wxss */
.scroll-view {
  white-space: nowrap;
  overflow-x: auto;
}

.tag-item {
  display: inline-block;
  padding: 10rpx 15rpx;
  font-size: 28rpx;
  color: #333;
  cursor: pointer;
}

.tag-item.active {
  color: #007aff;
  border-bottom: 6rpx solid #007aff;
}
.swiper {
  height: calc(100vh - 240rpx);
  margin-top: 20rpx;
}

.club-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  box-shadow: 0 4rpx 4rpx rgba(0, 0, 0, .2);
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
}

.info {
  flex: 1;
}

.name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.desc {
  font-size: 26rpx;
  color: #666;
}
.search-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #f6f6f6;
  padding: 20rpx;
  position: fixed;
  top: 160rpx;
  left: 0;
  right: 0;
  z-index: 999;
}

input {
  flex: 1;
  height: 60rpx;
  border-radius: 30rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background-color: transparent;
  border: none;
  outline: none;
}

button {
  margin-left: 20rpx;
}

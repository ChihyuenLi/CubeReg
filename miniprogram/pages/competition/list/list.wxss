/* pages/competition/list/list.wxss */

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.header {
  padding: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.list {
  flex: 1;
  overflow-y: auto;
  background-color: #f5f5f5;
}

.item {
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.item-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.item-meta {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.item-status {
  font-size: 24rpx;
  color: #fff;
  display: inline-block;
  padding: 6rpx 12rpx;
  border-radius: 3rpx;
}

.item-status.open {
  background-color: #66cc33;
}

.item-status.close {
  background-color: #cccccc;
}

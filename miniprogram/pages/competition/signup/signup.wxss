/* pages/competition/signup/signup.wxss */
.container {
  padding: 20px;
}

.form-item {
  display: flex;
  margin-bottom: 20px;
  align-items: center;
}

.label {
  width: 80px;
  text-align: right;
  margin-right: 20px;
}

input, select, textarea {
  flex-grow: 1;
  height: 40px;
  border: none;
  background-color: #f5f5f5;
  padding: 0 10px;
  font-size: 16px;
}

textarea {
  height: 80px;
}

input:focus, select:focus, textarea:focus {
  outline: none;
  box-shadow: 0 0 2px #1890ff;
}

.submit-btn, .reset-btn {
  margin-top: 20px;
  width: 100%;
  height: 40px;
  font-size: 16px;
  color: #fff;
  background-color: #1890ff;
  border: none;
  border-radius: 4px;
}

.reset-btn {
  margin-left: 20px;
  background-color: #f5f5f5;
  color: #666;
}

.value {
  font-weight: bold;
  margin-left: 5px;
}

/* detail.wxss */

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.header {
  padding: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.content {
  flex: 1;
  padding: 20rpx;
  background-color: #f5f5f5;
}

.info-item {
  margin-bottom: 20rpx;
}

.label {
  font-size: 28rpx;
  color: #999;
  margin-right: 10rpx;
}

.value {
  font-size: 28rpx;
  color: #333;
}
.signup-btn {
  display: block;
  margin: 40rpx auto 0;
  padding: 20rpx 80rpx;
  font-size: 32rpx;
  color: #fff;
  background-color: #007aff;
  border-radius: 10rpx;
}
